<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/confirmation_code_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/confirmationcode"
        android:layout_centerHorizontal="true"
        android:textSize="25sp" />
    <EditText
        android:id="@+id/confirmation_code_editText"
        style="@style/edittext_sign_in_up_style"
        android:inputType="text"
        android:layout_below="@+id/confirmation_code_title"/>
    <Button
        android:id="@+id/confirmation_code_Button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/submit"
        android:layout_centerHorizontal="true"
        android:background="@drawable/roundedborder"
        android:layout_below="@+id/confirmation_code_editText" />
</RelativeLayout>